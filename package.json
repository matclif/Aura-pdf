{
  "name": "aura-pdf",
  "version": "2.0.0",
  "description": "Aura PDF™ - Smart PDF Management Tool by Matovu Wycliff",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "dist": "npm run build"
  },
  "keywords": [
    "pdf",
    "rename",
    "split",
    "electron",
    "offline",
    "aura",
    "matovu",
    "wycliff"
  ],
  "author": {
    "name": "Matovu Wycliff",
    "email": "juncliff44@gmail.com",
    "url": "https://github.com/matovuwycliff"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "archiver": "^5.3.1",
    "pdf-lib": "^1.17.1",
    "pdf2pic": "^3.1.1",
    "pdfjs-dist": "^3.11.174",
    "yauzl": "^3.2.0",
    "yazl": "^3.3.1"
  },
  "build": {
    "appId": "com.aura.pdf",
    "productName": "Aura PDF™",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}",
      "!dist/**/*",
      "!out/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "requestedExecutionLevel": "asInvoker",
      "verifyUpdateCodeSignature": false,
      "icon": "assets/icons/aura-icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Aura PDF™",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "menuCategory": "PDF Tools",
      "allowElevation": true,
      "perMachine": false,
      "warningsAsErrors": false,
      "uninstallDisplayName": "Aura PDF™",
      "installerIcon": null,
      "uninstallerIcon": null
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/aura-icon.png"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
